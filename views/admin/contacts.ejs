<div class="container">
  <h1>Liste des contacts</h1>
  
  <div class="table-wrapper">
    <table class="contacts-table">
      <thead>
        <tr>
          <th>Nom complet</th>
          <th>Email</th>
          <th>DÃ©partement</th>
          <th>Message</th>
          <th>Sujet</th>
          <th>supprimer</th>
        </tr>
      </thead>
      <tbody>
        <% contacts.forEach(c => { %>
          <tr>
            <td class="name-cell"><%= c.nom %> <%= c.prenom %></td>
            <td class="email-cell"><%= c.email %></td>
            <td class="department-cell"><%= c.domaine %></td>
            <td class="messages-cell"><%= c.message %></td>
            <td class="subject-cell"><%= c.sujet %></td>

            <td>
               <a href="/admin/contacts/delete/<%= c._id %>" onclick="return confirm('Supprimer ce contact ?')" class="btn-supprimer">
  <img src="https://img.icons8.com/ios-filled/20/FF0000/trash.png" alt="Trash Icon">
</a>

            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
  
  <!-- Version mobile (cards) -->
  <div class="mobile-cards">
    <% contacts.forEach(c => { %>
      <div class="contact-card">
        <div class="name"><%= c.nom %> <%= c.prenom %></div>
        <div class="email"><%= c.email %></div>
        <div class="messages"><%= c.messages %></div>
        <span class="subject-badge"><%= c.sujet %></span>
      </div>
    <% }) %>
  </div>
</div>